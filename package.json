{
  "name": "b0x-contracts",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "0x-smart-contracts": "git+https://github.com/0xProject/contracts.git",
    "0x.js": "^0.32.4",
    "@0xproject/types": "^0.2.0",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "web3-utils": "1.0.0-beta.29"
  },
  "dependencies": {
    "b0x.js": "git+https://github.com/b0xNetwork/b0x.js.git",
    "bignumber.js": "^6.0.0",
    "ganache-cli": "^6.1.0",
    "rimraf": "^2.6.2",
    "truffle": "^4.1.3",
    "truffle-hdwallet-provider": "0.0.3",
    "zeppelin-solidity": "1.6.0",
    "ziptool": "^1.0.2"
  },
  "scripts": {
    "blockchain": "./extra/restart_blockchain.sh",
    "blockchain:restart": "npm run blockchain:stop && npm run blockchain:start",
    "blockchain:start": "npm run network:run >> logs/ganache.log 2>&1 &",
    "blockchain:stop": "pkill -9 -f ganache-cli || true",
    "build": "rimraf ./build/contracts && truffle compile",
    "build:deploy": "rimraf ./build/contracts && truffle compile && npm run migrate:reset && npm run assets",
    "rebuild:deploy": "truffle compile && npm run migrate:reset",
    "assets": "node ./extra/generate_test_assets.js",
    "assets:deploy": "node ./extra/deploy_test_assets.js",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "network": "npm run network:deploy && npm run network:run",
    "network:deploy": "rimraf ./test_network && mkdirp ./test_network && ziptool --unzip ./extra/78fe8dd.zip -o ./test_network",
    "network:run": "ganache-cli --networkId 50 -p 8545 --db ./test_network -m \"concert load couple harbor equip island argue ramp clarify fence smart topic\"",
    "test": "truffle test ./test/endtoend.js"
  }
}
