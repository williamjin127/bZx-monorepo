{
  "name": "b0x-contracts",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "0x-smart-contracts": "git+https://github.com/0xProject/contracts.git",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1"
  },
  "dependencies": {
    "0x.js": "^0.29.2",
    "b0x.js": "git+https://github.com/tomcbean/b0x.js.git#0db9012bbaba5e201dc20a55effdb350368fb5ad",
    "rimraf": "^2.6.2",
    "zeppelin-solidity": "^1.5.0"
  },
  "scripts": {
    "blockchain": "./restart_blockchain.sh",
    "blockchain:restart": "npm run blockchain:stop && npm run blockchain:start",
    "blockchain:start": "npm run network:run >> logs/ganache.log 2>&1 &",
    "blockchain:stop": "pkill -9 -f ganache-cli || true",
    "build": "rimraf ./build/contracts/* && truffle compile",
    "build:deploy": "rimraf ./build/contracts/* && truffle compile && npm run migrate:reset",
    "create_assets": "node generate_test_assets.js",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "network": "npm run network:deploy && npm run network:run",
    "network:deploy": "rimraf ./test_network/* && ziptool --unzip ./78fe8dd.zip -o ./test_network",
    "network:run": "ganache-cli --networkId 50 -p 8545 --db ./test_network -m \"concert load couple harbor equip island argue ramp clarify fence smart topic\"",
    "test": "truffle test"
  }
}
