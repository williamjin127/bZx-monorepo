    "@0xproject/types": "^0.2.3",
    "@bzxnetwork/bzx.js": "0.5.1",
    "abi-decoder": "^1.2.0",
    "bignumber.js": "^7.0.1",
    "cpy-cli": "^2.0.0",
    "ethereumjs-wallet": "0.6.0",
    "ethers": "^4.0.7",
    "ganache-cli": "^6.4.1",
    "lodash": "^4.17.5",
    "solc_0.5.3": "npm:solc@0.5.3",
    "solc_0.5.8": "npm:solc@0.5.8",
    "truffle": "5.0.4",
    "truffle-privatekey-provider": "https://github.com/bZxNetwork/truffle-privatekey-provider",
    "web3-utils": "1.0.0-beta.34"
  },
  "devDependencies": {
    "@digix/doxity": "git://github.com/DigixGlobal/doxity.git#doxity-latest",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "coveralls": "^3.0.2",
    "docusaurus": "^1.2.1",
    "extract-zip": "^1.6.7",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "node-mv": "^0.1.3",
    "openzeppelin-solidity": "1.12.0",
    "rimraf": "^2.6.3",
    "solhint": "^1.2.1",
    "solidity-coverage": "^0.5.5",
    "solidity-docgen": "^0.1.0"
  },
  "scripts": {
    "blockchain": "./extra/restart_blockchain.sh",
    "blockchain:restart": "npm run blockchain:stop && npm run blockchain:start",
    "blockchain:start": "npm run network:run >> logs/ganache.log 2>&1 &",
    "blockchain:stop": "pkill -9 -f ganache-cli || true",
    "build": "rimraf ./build/contracts && truffle compile",
    "build:deploy": "rimraf ./build/contracts && truffle compile && npm run migrate:reset && npm run assets",
    "build:docs": "./extra/generate_documentation.sh",
    "prepublish:gh:docs": "npm run build:docs",
    "publish:gh:docs": "./extra/publish_gh_documentation.sh",
    "rebuild:deploy": "truffle compile && npm run migrate:reset",
    "assets": "node ./extra/generate_test_assets.js",
    "preptestnet": "rimraf ./test_network/build_contracts && rimraf ./test_network/deployed && rimraf ./test_network/html_public_test && npm run assets && cpy ./build/contracts ./test_network/build_contracts && node-mv ./html_public_test/deployed ./test_network/deployed && node-mv ./html_public_test ./test_network/html_public_test",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "network": "npm run network:deploy && npm run network:deployprev && npm run network:run",
    "network-coverage": "npm run network:deploy && npm run network:deployprev && npm run network:run-coverage",
    "network:deploy": "rimraf ./test_network && mkdirp ./test_network && cd ./test_network && extract-zip ../extra/bZx_db_latest.zip",
    "network:deployprev": "rimraf ./build/contracts && rimraf ./html_public_test && mkdirp ./build && node-mv ./test_network/build_contracts ./build/contracts && node-mv ./test_network/html_public_test ./html_public_test",
    "network:deploy0xdb": "rimraf ./test_network && mkdirp ./test_network && cd ./test_network && extract-zip ../extra/0x_ganache_snapshot-2.4.0.zip",
    "network:run": "ganache-cli -l 8000000 --networkId 50 -p 8545 --db ./test_network -m \"concert load couple harbor equip island argue ramp clarify fence smart topic\"",
    "network:run-coverage": "./node_modules/.bin/testrpc-sc --networkId 55 -p 8555 --gasLimit 500000000 --db ./test_network -m \"concert load couple harbor equip island argue ramp clarify fence smart topic\"",
    "test": "truffle test",
    "tokens": "cpy ./build/contracts ./extensions/loanTokenization/build/contracts",
    "lint-contracts": "solhint contracts/**/*.sol",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "t": "truffle compile && truffle exec ./wrapper_test.js",
    "pricefeed": "cd ./extensions/loanTokenization && truffle exec scripts/update_reference_prices.js --network"
  }
}
